<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black_bg">

    <TextView
        android:id="@+id/timeTrialEndRunDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/knewave"
        android:text="@string/sure_ending_run"
        android:textColor="@color/green_shaded"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeTrialEndRunDialogYesTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="@string/yes"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTrialEndRunDialogScoreTxt" />

    <TextView
        android:id="@+id/timeTrialEndRunDialogNoTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="@string/no"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTrialEndRunDialogYesTxt" />

    <TextView
        android:id="@+id/timeTrialEndRunDialogScoreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/knewave"
        android:text="@string/default_number"
        android:textColor="@color/standard_color_on_black_screen"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/timeTrialEndRunDialog"
        app:layout_constraintStart_toStartOf="@+id/timeTrialEndRunDialog"
        app:layout_constraintTop_toBottomOf="@+id/timeTrialEndRunDialog" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white_shaded_x4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeTrialEndRunDialogYesTxt"
        app:layout_constraintWidth_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>